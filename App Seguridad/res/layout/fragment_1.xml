<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backfrags"
    tools:context=".Fragment1">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Recibido"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/radioButton2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.192"
            app:layout_constraintStart_toEndOf="@+id/boton3"
            app:layout_constraintTop_toTopOf="@+id/boton3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/boton3"
            android:layout_width="180dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_rounded"
            android:drawableStart="@drawable/conect"
            android:drawablePadding="8dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="Comprobar conexion"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:backgroundTint="#303F9F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boton2"
            app:layout_constraintVertical_bias="0.182"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/boton2"
            android:layout_width="180dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_rounded"
            android:drawableStart="@drawable/panic"
            android:drawablePadding="8dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="PANICO"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:backgroundTint="#E3E3E3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintVertical_bias="0.107"
            tools:ignore="MissingConstraints" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:rotationY="180"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:translationX="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonaso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/buttonaso"
            app:layout_constraintTop_toTopOf="@+id/buttonaso"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/button_rounded_border"
            android:text="Proteccion Desactivada"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FAFAFA"
            android:textIsSelectable="false"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="o" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="150dp"
            android:background="@color/textselect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:buttonTint="#4E4E4E"
            android:checked="true"
            android:clickable="false"
            android:duplicateParentState="false"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/boton3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintStart_toEndOf="@+id/boton3"
            app:layout_constraintTop_toTopOf="@+id/boton3"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buttonaso"
            android:layout_width="236dp"
            android:layout_height="70dp"
            android:background="@drawable/button_rounded"
            android:drawableStart="@drawable/unlock"
            android:drawablePadding="8dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="DESACTIVAR"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            app:backgroundTint="#D32F2F"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.525"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silenciar"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/switch1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toEndOf="@+id/buttonaso"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.376" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>